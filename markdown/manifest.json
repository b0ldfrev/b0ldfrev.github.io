{
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "0.1.0",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "128": "logo-128.png"
  },
  "app": {
	"background": {
      "scripts": ["background.js"]
    }
  },
  "offline_enabled": true,
  "permissions": [
    "unlimitedStorage", "storage", "<all_urls>", "webview", { "fileSystem": ["write", "retainEntries", "directory"] }
  ]
}